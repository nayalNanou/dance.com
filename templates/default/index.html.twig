{% extends 'base.html.twig' %}

{% block body %}
    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <nav class="nav-menu">
        <div class="menu-languette">
            {% if app.user %}
                <span class="text-menu">{{ app.user.email }}</span>
            {% else %}
                <span class="text-menu">Dance.com</span>
            {% endif %}
            <span class="menu-label">Menu</span>
        </div>

        <ul>
            <li><a href="{{ path("app_register") }}">S'inscrire</a></li>
            {% if app.user %}
                <li><a href="{{ path("user_profile") }}">Mon compte</a></li>
                <li><a href="{{ path("app_logout") }}">Se d√©connecter</a></li>
            {% else %}
                <li><a href="{{ path("app_login") }}">Se connecter</a></li>
            {% endif %}
        </ul>
    </nav>

    {{ include('component/_home_main_carousel.html.twig') }}

    <h1 class="dance-com">Dance.com</h1>

    <div class="list-dance">
        {% if dances is defined %}
            {% for dance in dances %}
                <div class="dance-type">
                    <a href="{{ path("dance_show", {slug: dance.slug}) }}" >
                        <img class="dance-image" src="{{ dance.image }}" />
                        <span class="dance-name">{{ dance.name }}</span>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
