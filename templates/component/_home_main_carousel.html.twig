<div id="home-main-carousel" class="my-carousel special-carousel">
    <img src="{{ asset('build/images/ballerina-1.png') }}" class="left-arrow-carousel" id="left-arrow-home-carousel" />
    <div class="slide-carousel">
        {% if imagesCarousel is defined %}
            {% for name,image in imagesCarousel %}
                <img src="{{ image }}" alt="{{ name }}" />
            {% endfor %}
        {% endif %}
    </div>
    <img src="{{ asset('build/images/ballerina-2.png') }}" class="right-arrow-carousel" id="right-arrow-home-carousel" />
</div>

<div class="bloc-label-sport">
    <div id="label-sport-carousel" class="my-carousel special-carousel nbimg:2 nbimg:sm3 nbimg:md3 nbimg:lg4 shift:-1 shift:sm:-1 shift:lg:-1">
        <div class="slide-carousel">
            {% if imagesCarousel is defined %}
                {% for name,image in imagesCarousel %}
                    <div>
                        <p class="universe-sport-name">{{ name|capitalize }}</p>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
