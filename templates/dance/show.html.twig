{% extends 'base.html.twig' %}

{% block title %}Dance{% endblock %}

{% block body %}
    <h1 class="font-weight-bold mt-4">Dance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td class="h3">{{ dance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td class="h3">{{ dance.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="crud-dance-image" src="{{ dance.image }}" /></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dance.description }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td class="h3">{{ dance.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a class="crud-show-dance w-25 mx-auto mt-4" href="{{ path('dance_edit', {'id': dance.id}) }}">edit</a>

    <a class="crud-edit-dance w-25 mx-auto mt-4" href="{{ path('dance_index') }}">back to list</a>

    {{ include('dance/_delete_form.html.twig') }}
{% endblock %}
