<form method="post" action="{{ path('dance_delete', {'id': dance.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input crud-edit-dance" type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dance.id) }}">
    <button class="mt-n4 crud-show-dance" btn">Delete</button>
</form>
